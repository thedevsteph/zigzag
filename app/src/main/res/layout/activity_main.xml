<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/main_container"
        android:background="@color/whiteBoy"
        android:layout_height="match_parent"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/plus_operation_square"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:background="@color/greyBoy"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/blackBoy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/minus_operation_square"
            app:layout_constraintTop_toBottomOf="@id/target_number"
            android:fontFamily="@font/fira_sans_extra_condensed_thin"/>

    <TextView
            android:id="@+id/multiply_operation_square"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="70dp"
            android:textSize="30sp"
            android:text="*"
            android:background="@color/greyBoy"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/blackBoy"
            app:layout_constraintStart_toEndOf="@id/divide_operation_square"
            app:layout_constraintTop_toTopOf="@id/divide_operation_square"
            app:layout_constraintBottom_toBottomOf="@id/divide_operation_square"
            android:fontFamily="@font/fira_sans_extra_condensed_thin"/>

    <TextView
            android:id="@+id/minus_operation_square"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="30sp"
            android:text="-"
            android:background="@color/greyBoy"
            android:gravity="center"
            android:textColor="@color/blackBoy"
            app:layout_constraintEnd_toStartOf="@id/divide_operation_square"
            app:layout_constraintStart_toEndOf="@id/plus_operation_square"
            app:layout_constraintTop_toBottomOf="@id/target_number"
            app:layout_constraintTop_toTopOf="@id/plus_operation_square"
            app:layout_constraintBottom_toBottomOf="@id/plus_operation_square"
            android:fontFamily="@font/fira_sans_extra_condensed_thin"/>

    <TextView
            android:id="@+id/divide_operation_square"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:text="/"
            android:background="@color/greyBoy"
            android:gravity="center"
            android:textColor="@color/blackBoy"
            app:layout_constraintEnd_toStartOf="@id/multiply_operation_square"
            app:layout_constraintStart_toEndOf="@id/minus_operation_square"
            app:layout_constraintTop_toTopOf="@id/plus_operation_square"
            app:layout_constraintBottom_toBottomOf="@id/plus_operation_square"
            android:fontFamily="@font/fira_sans_extra_condensed_thin"/>

    <TextView
            android:id="@+id/target_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2032"
            android:textSize="100sp"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/fira_sans_extra_condensed_thin"/>

    <TextView
            android:id="@+id/square1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:background="@color/whiteBoy"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/square2"
            app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square1number"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_circle"
            android:textSize="13sp"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toStartOf="@id/square1"
            app:layout_constraintEnd_toEndOf="@id/square1"
            app:layout_constraintTop_toTopOf="@id/square1"
            app:layout_constraintBottom_toBottomOf="@id/square1"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@color/whiteBoy"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toEndOf="@id/square1"
            app:layout_constraintEnd_toStartOf="@id/square3"
            app:layout_constraintBaseline_toBaselineOf="@id/square1"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square2number"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_circle"
            android:text="2"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toStartOf="@id/square2"
            app:layout_constraintEnd_toEndOf="@id/square2"
            app:layout_constraintTop_toTopOf="@id/square2"
            app:layout_constraintBottom_toBottomOf="@id/square2"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/whiteBoy"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toEndOf="@id/square2"
            app:layout_constraintEnd_toStartOf="@id/square4"
            app:layout_constraintBaseline_toBaselineOf="@id/square1"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square3number"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_circle"
            android:text="3"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toStartOf="@id/square3"
            app:layout_constraintEnd_toEndOf="@id/square3"
            app:layout_constraintTop_toTopOf="@id/square3"
            app:layout_constraintBottom_toBottomOf="@id/square3"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square4"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:background="@color/whiteBoy"
            android:textSize="13sp"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toEndOf="@id/square3"
            app:layout_constraintEnd_toStartOf="@id/square5"
            app:layout_constraintBaseline_toBaselineOf="@id/square1"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square4number"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_circle"
            android:text="3"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toStartOf="@id/square4"
            app:layout_constraintEnd_toEndOf="@id/square4"
            app:layout_constraintTop_toTopOf="@id/square4"
            app:layout_constraintBottom_toBottomOf="@id/square4"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/whiteBoy"
            android:textSize="13sp"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toEndOf="@id/square4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/square1"
            android:fontFamily="@font/pt_sans_narrow"/>

    <TextView
            android:id="@+id/square5number"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_circle"
            android:text="3"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toStartOf="@id/square5"
            app:layout_constraintEnd_toEndOf="@id/square5"
            app:layout_constraintTop_toTopOf="@id/square5"
            app:layout_constraintBottom_toBottomOf="@id/square5"
            android:fontFamily="@font/pt_sans_narrow"/>

    <android.support.constraint.Guideline
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/guideline_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="20dp"
            android:orientation="horizontal"/>

    <android.support.constraint.Guideline
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/guideline_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="horizontal"/>

</android.support.constraint.ConstraintLayout>