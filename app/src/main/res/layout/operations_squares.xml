<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:background="@color/whiteBoy"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/square1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:background="@color/colorAccent"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/square2"
            app:layout_constraintTop_toTopOf="@id/guideline_top"
            app:layout_constraintBottom_toBottomOf="@id/guideline_bottom" android:fontFamily="@font/pt_sans_narrow"/>
    <TextView
            android:id="@+id/square2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="13sp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toEndOf="@id/square1"
            app:layout_constraintEnd_toStartOf="@id/square3"
            app:layout_constraintBaseline_toBaselineOf="@id/square1"
            android:fontFamily="@font/pt_sans_narrow"/>
    <TextView
            android:id="@+id/square3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="/"
            android:textSize="13sp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toEndOf="@id/square2"
            app:layout_constraintEnd_toStartOf="@id/square4"
            app:layout_constraintBaseline_toBaselineOf="@id/square1" android:fontFamily="@font/pt_sans_narrow"/>
    <TextView
            android:id="@+id/square4"
            android:layout_width="50dp"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_height="50dp"
            android:text="x"
            android:textSize="13sp"
            android:textColor="@color/whiteBoy"
            app:layout_constraintStart_toEndOf="@id/square3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/square1"
            android:fontFamily="@font/pt_sans_narrow"/>




</android.support.constraint.ConstraintLayout>